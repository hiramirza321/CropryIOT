<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CheckHeathActivity">

    <LinearLayout
        android:id="@+id/li1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:orientation="horizontal"
        android:gravity="center">
        <ImageView
            android:layout_marginLeft="10dp"
            android:gravity="center"
            android:layout_width="40dp"
            android:layout_height="30dp"
            android:background="@drawable/arrow" />
        <ImageView
            android:layout_marginLeft="40dp"
            android:gravity="center"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:background="@drawable/dash" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginLeft="10dp"
            android:orientation="vertical">

            <TextView
                android:layout_marginLeft="-110dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:text="Cropry IOT"
                android:textSize="25dp" />

            <TextView
                android:layout_marginLeft="-60dp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Find The Disease"
                android:textSize="25dp">

            </TextView>

        </LinearLayout>

    </LinearLayout>


   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:layout_below="@id/li1"
       android:layout_marginTop="30dp"
       android:orientation="vertical">
       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:layout_weight="1"
           android:gravity="center">
           <androidx.cardview.widget.CardView
               app:cardElevation="10dp"
               app:cardMaxElevation="10dp"
               app:cardPreventCornerOverlap="true"
               app:cardUseCompatPadding="true"
               android:layout_width="150dp"
               android:layout_height="150dp"
               app:cardBackgroundColor="@color/white"
               android:layout_margin="10dp"
               app:cardCornerRadius="15dp">
               <LinearLayout
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:orientation="vertical"
                   android:layout_gravity="center">

                   <ImageView
                       android:id="@+id/apple"
                       android:layout_width="65dp"
                       android:layout_height="60dp"
                       android:gravity="center"
                       android:background="@drawable/apple"/>
                   <TextView
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content"
                       android:text="Apple"
                       android:gravity="center"
                       android:textStyle="bold"
                       android:textColor="@color/black"/>
               </LinearLayout>
           </androidx.cardview.widget.CardView>
           <androidx.cardview.widget.CardView
               app:cardElevation="10dp"
               app:cardMaxElevation="10dp"
               app:cardPreventCornerOverlap="true"
               app:cardUseCompatPadding="true"
               android:layout_width="150dp"
               android:layout_height="150dp"
               app:cardBackgroundColor="@color/white"
               android:layout_margin="10dp"
               app:cardCornerRadius="15dp">
               <LinearLayout
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:orientation="vertical"
                   android:layout_gravity="center">

                   <ImageView
                       android:id="@+id/banana"
                       android:layout_width="65dp"
                       android:layout_height="60dp"
                       android:gravity="center"
                       android:background="@drawable/banana"/>
                   <TextView
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content"
                       android:text="Banana"
                       android:gravity="center"
                       android:textStyle="bold"
                       android:textColor="@color/black"/>
               </LinearLayout>
           </androidx.cardview.widget.CardView>

       </LinearLayout>

       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:layout_weight="1"
           android:gravity="center">
           <androidx.cardview.widget.CardView
               app:cardElevation="10dp"
               app:cardMaxElevation="10dp"
               app:cardPreventCornerOverlap="true"
               app:cardUseCompatPadding="true"
               android:layout_width="150dp"
               android:layout_height="150dp"
               app:cardBackgroundColor="@color/white"
               android:layout_margin="10dp"
               app:cardCornerRadius="15dp">
               <LinearLayout
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:orientation="vertical"
                   android:layout_gravity="center">

                   <ImageView
                       android:id="@+id/rice"
                       android:layout_width="65dp"
                       android:layout_height="60dp"
                       android:gravity="center"
                       android:background="@drawable/barley"/>
                   <TextView
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content"
                       android:text="Rice"
                       android:gravity="center"
                       android:textStyle="bold"
                       android:textColor="@color/black"/>
               </LinearLayout>
           </androidx.cardview.widget.CardView>
           <androidx.cardview.widget.CardView
               app:cardElevation="10dp"
               app:cardMaxElevation="10dp"
               app:cardPreventCornerOverlap="true"
               app:cardUseCompatPadding="true"
               android:layout_width="150dp"
               android:layout_height="150dp"
               app:cardBackgroundColor="@color/white"
               android:layout_margin="10dp"
               app:cardCornerRadius="15dp">
               <LinearLayout
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:orientation="vertical"
                   android:layout_gravity="center">

                   <ImageView
                       android:id="@+id/cauliflower"
                       android:layout_width="65dp"
                       android:layout_height="60dp"
                       android:gravity="center"
                       android:background="@drawable/cauliflower"/>
                   <TextView
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content"
                       android:text="CauliFlower"
                       android:gravity="center"
                       android:textStyle="bold"
                       android:textColor="@color/black"/>
               </LinearLayout>
           </androidx.cardview.widget.CardView>
       </LinearLayout>

       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:layout_weight="1"
           android:gravity="center">
           <androidx.cardview.widget.CardView
               app:cardElevation="10dp"
               app:cardMaxElevation="10dp"
               app:cardPreventCornerOverlap="true"
               app:cardUseCompatPadding="true"
               android:layout_width="150dp"
               android:layout_height="150dp"
               app:cardBackgroundColor="@color/white"
               android:layout_margin="10dp"
               app:cardCornerRadius="15dp">
               <LinearLayout
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:orientation="vertical"
                   android:layout_gravity="center">

                   <ImageView
                       android:id="@+id/grapes"
                       android:layout_width="65dp"
                       android:layout_height="60dp"
                       android:gravity="center"
                       android:background="@drawable/grapes"/>
                   <TextView
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content"
                       android:text="Grapes"
                       android:gravity="center"
                       android:textStyle="bold"
                       android:textColor="@color/black"/>
               </LinearLayout>
           </androidx.cardview.widget.CardView>
           <androidx.cardview.widget.CardView
               app:cardElevation="10dp"
               app:cardMaxElevation="10dp"
               app:cardPreventCornerOverlap="true"
               app:cardUseCompatPadding="true"
               android:layout_width="150dp"
               android:layout_height="150dp"
               app:cardBackgroundColor="@color/white"
               android:layout_margin="10dp"
               app:cardCornerRadius="15dp">
               <LinearLayout
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:orientation="vertical"
                   android:layout_gravity="center">

                   <ImageView
                       android:id="@+id/corn"
                       android:layout_width="65dp"
                       android:layout_height="60dp"
                       android:gravity="center"
                       android:background="@drawable/corni"/>
                   <TextView
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content"
                       android:text="Corn"
                       android:gravity="center"
                       android:textStyle="bold"
                       android:textColor="@color/black"/>
               </LinearLayout>
           </androidx.cardview.widget.CardView>
       </LinearLayout>



   </LinearLayout>


</RelativeLayout>